<Window x:Class="TaskieUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskieUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock Name="TitleLabel"
            Grid.Column="1" Grid.Row="1"
            Text="Title:"/>
        <TextBox Name="TitleInput"
                 Grid.Column="1" Grid.Row="2"
                 Text="" />
        <TextBlock Name="ImportanceLabel"
            Grid.Column="1" Grid.Row="3"
            Text="Importance:" />
        <Slider Name="ImportanceInput"
            Grid.Column="1" Grid.Row="4"
            Minimum="1" Maximum="3"
            SmallChange="1" LargeChange="1"/>
        <TextBlock Name="DateLabel"
            Grid.Column="1" Grid.Row="5"
            Text="Date:" />
        <DatePicker Name="DateInput"
            Grid.Column="1" Grid.Row="6"/>
        <Button Name="SaveTask"
            Grid.Column="1" Grid.Row="7"
            Margin="5,5,5,5"
            Click="SaveTask_Click" Content="Save" />
        <!-- Remove task by name -->
        <TextBlock Name="TaskToCompleteText"
              Grid.Column="1" Grid.Row="8"
                   Text="Task to complete:"/>
        <TextBox Name="TaskToCompleteInput"
            Grid.Column="1" Grid.Row="9"
            Text="" />
        <Button Name="CompleteTask"
        Grid.Column="1" Grid.Row="10"
        Margin="5,5,5,5"
        Click="CompleteTask_Click" Content="Complete" />
        <!-- Show todays task count -->
        <Button Name="TodaysTasks"
        Grid.Column="1" Grid.Row="11"
        Margin="5,5,5,5"
        Click="ShowImportantTasks" Content="Show number of priority tasks" />
        <!-- Add code for exercise 2.3... -->
        <!-- Tasks Display -->
        <ListBox Name="TasksList"
        Grid.Column="3" Grid.Row="1"
        Grid.RowSpan="12"
        MouseDoubleClick="TasksList_MouseDoubleClick"/>
    </Grid>
</Window>